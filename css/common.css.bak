@charset "UTF-8";

*{
    padding: 0;
    margin: 0;
    box-sizing: border-box; 
	border: 0;
	font-family: 'Noto Sans KR', sans-serif;
	font-weight: 400;

}
.clearfix:after { clear: both; display: block; content: ""; }
li { list-style: none;}
a { text-decoration: none; color: #666; }
a:hover { text-decoration: underline; }
button {cursor: pointer;}

.wrap { width: 1400px; position: relative; margin: 0 auto;  }
/*랩을 쌀 때는 100px 단위로 하는 게 좋고 애매하면 50px 단위, 보통 1200~1400 준다*/

header { height: 100px; }
header .logo { display:inline-block; float: left; position:relative; z-index:20; margin-top: 22px; }
header .menu_box {width: 100%; position: absolute; left: 0; top: 100px;z-index:10;background-color:#fff; }
header .menu {margin:-100px 280px 0 140px; }
header .menu a { text-align: center; display: block; }
header .menu .dep1_area { width: 151px; float: left; }
header .menu .dep1 { height: 100px; font-size: 28px; font-weight: 600; color: #000; line-height: 100px; }
header .menu .dep1:hover { border-bottom: 4px solid #000; text-decoration: none; }
header .menu .dep2 {display:none;padding:30px 0;}
header .menu .dep2 li {margin-top:24px;}
header .menu .dep2 li:first-child {margin-top:0;}
header .menu .dep2 a { font-size: 16px; color:#666; }
header .menu .dep2 a:hover { color: #000; font-weight: 500;}
.head_info { float: right; position:relative; z-index:20;width: 250px; margin-top: 26px; }
.head_info .search { width: 205px; height: 48px; border: 1px solid #ddd; border-radius: 24px; float: left; }
.head_info .search input[type="text"] { width: 135px; height: 46px; margin-left: 20px; }
.head_info .search input[type="submit"] { width: 28px; height: 28px; background: url("../img/header/search_icon.png") no-repeat; color: transparent; font-size: 0; line-height: 0; vertical-align: middle; }
.head_info .login { width: 23px; height: 25px; float: right; margin-top: 11px; }

footer {padding:100px 0;border-top:1px solid #ddd;background-color:#f9f9f9;font-size:14px;color:#999;}
.footer_info {margin-bottom:30px;}
.footer_info li {float:left;position:relative;margin-left:16px;padding-left:16px;}
.footer_info li:before {display:block;content:'';position:absolute;left:0;top:calc(50% - 6px);width:1px;height:12px;background-color:#ddd;}
.footer_info li:first-child {margin-left:0;padding-left:0;}
.footer_info li:first-child:before {display:none;}
.footer_info a {color:#666;}
footer .press_group {position:absolute;right:0;top:0;width:206px;}
footer .press_group .btn {display:block;position:relative;width:100%;padding-left:20px;height:48px;background-color:#fff;border:1px solid #ddd;border-radius:24px;font-size:16px;color:#666;text-align:left;}
footer .press_group .btn:before {display:block;content:'';position:absolute;right:20px;top:calc(50% - 4px);width:14px;height:8px;background:url('../img/footer/press_group_arrow.png') no-repeat;transform:rotate(-180deg);transition:all .2s;}
footer .press_group .btn.on:before {transform:rotate(0deg);}
footer .press_group .cont_box {display:none;position:absolute;left:0;bottom:58px;width:100%;border:1px solid #ddd;border-radius:15px;background-color:#fff;}
footer .press_group .cont_box ul {padding:15px;}
footer .address address {margin-bottom:15px;font-style:normal;}
footer .address address span {display:inline-block;position:relative;margin-left:16px;padding-left:16px;}
footer .address address span:before {display:block;content:'';position:absolute;left:0;top:calc(50% - 6px);width:1px;height:12px;background-color:#ddd;}
footer .address ul {margin-bottom:15px;}
footer .address li {float:left;position:relative;margin-left:16px;padding-left:16px;}
footer .address li:before {display:block;content:'';position:absolute;left:0;top:calc(50% - 6px);width:1px;height:12px;background-color:#ddd;}
footer .address li:first-child {margin-left:0;padding-left:0;}
footer .address li:first-child:before {display:none;}






